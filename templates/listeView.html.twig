{% extends 'base.html.twig' %}
{% block title 'Mes articles' %}
{% block body %}
    {% for article in articles %}
      <div class="d-flex justify-content-center">
        <div class="card text-center mt-5" style="width: 18rem;">
          <div class="card-body">
              <p>Article numéro : {{article.id}}</p>
              <h5 class="card-title text-danger text-center">{{ article.Titre }}</h5>
              <p class="card-text">{{ article.Contenu }}</p>
              <a href="single/{{ article.id }}" class="btn btn-primary">Détail</a>
          </div>
        </div>
      </div>
    {% endfor %}
    {% endblock %}

